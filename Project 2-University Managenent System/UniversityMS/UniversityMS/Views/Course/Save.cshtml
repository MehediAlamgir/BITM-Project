@model UniversityMS.Models.Course

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save Course</h2>

<div align="center">
    @if (@ViewBag.Message != null)
    {
        <span class="alert alert-success" id="success-alert">@ViewBag.Message</span>
    }
